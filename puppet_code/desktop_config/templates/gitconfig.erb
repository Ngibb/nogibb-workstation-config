[color]
        ui = auto
[color "branch"]
        current = green reverse
        local = green
        remote = yellow
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[color]
        ui = true
[color "diff"]
        whitespace = red reverse
[core]
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[user]
        name = <%= @git_human_name %>
        email = <%= @git_email %>
